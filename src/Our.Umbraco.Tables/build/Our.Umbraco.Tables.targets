<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <OurUmbracoTablesContentFilesPath>$(MSBuildThisFileDirectory)..\Content\App_Plugins\Our.Umbraco.Tables\**\*.*</OurUmbracoTablesContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyOurUmbracoTablesAssets" BeforeTargets="Build">
        <ItemGroup>
            <OurUmbracoTablesContentFiles Include="$(OurUmbracoTablesContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Our.Umbraco.Tables files: $(OurUmbracoTablesContentFilesPath) - #@(OurUmbracoTablesContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(OurUmbracoTablesContentFiles)"
            DestinationFiles="@(OurUmbracoTablesContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.Tables\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearOurUmbracoTablesAssets" BeforeTargets="Clean">
        <ItemGroup>
            <OurUmbracoTablesDir Include="$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.Tables\" />
        </ItemGroup>
        <Message Text="Clear old Our.Umbraco.Tables data"  Importance="high" />
        <RemoveDir Directories="@(OurUmbracoTablesDir)"  />
    </Target>

</Project>
