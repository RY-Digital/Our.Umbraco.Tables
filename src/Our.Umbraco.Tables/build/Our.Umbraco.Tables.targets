<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <Our.Umbraco.TablesContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Our.Umbraco.Tables\**\*.*</Our.Umbraco.TablesContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyOur.Umbraco.TablesAssets" BeforeTargets="Build">
        <ItemGroup>
            <Our.Umbraco.TablesContentFiles Include="$(Our.Umbraco.TablesContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Our.Umbraco.Tables files: $(Our.Umbraco.TablesContentFilesPath) - #@(Our.Umbraco.TablesContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(Our.Umbraco.TablesContentFiles)"
            DestinationFiles="@(Our.Umbraco.TablesContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.Tables\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearOur.Umbraco.TablesAssets" BeforeTargets="Clean">
        <ItemGroup>
            <Our.Umbraco.TablesDir Include="$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.Tables\" />
        </ItemGroup>
        <Message Text="Clear old Our.Umbraco.Tables data"  Importance="high" />
        <RemoveDir Directories="@(Our.Umbraco.TablesDir)"  />
    </Target>

</Project>
